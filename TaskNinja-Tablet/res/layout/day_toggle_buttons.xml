<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    
    <LinearLayout
			android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal"
    		android:padding="0dp"
    		android:layout_margin="0dp">
    		
    		<ToggleButton
    			android:id="@+id/mondayToggleButton"
	    		android:layout_width="1dp"
	    		android:layout_height="wrap_content"
	    		android:layout_weight="1"
	    		android:textOn="M"
	    		android:textOff="M"
	    		android:textSize="24sp"
	    		android:padding="5dp"
	    		android:layout_margin="2dp"/>

	    	<ToggleButton
	    		android:id="@+id/tuesdayToggleButton"
	    		android:layout_width="1dp"
	    		android:layout_height="wrap_content"
	    		android:layout_weight="1"
	    		android:textOn="Tu"
	    		android:textOff="Tu"
	    		android:textSize="24sp"
	    		android:padding="5dp"
	    		android:layout_margin="2dp"/>

	    	<ToggleButton
	    		android:id="@+id/wednesdayToggleButton"
	    		android:layout_width="1dp"
	    		android:layout_height="wrap_content"
	    		android:layout_weight="1"
	    		android:textOn="W"
	    		android:textOff="W"
	    		android:textSize="24sp"
	    		android:padding="5dp"
	    		android:layout_margin="2dp"/>

	    	<ToggleButton
	    		android:id="@+id/thursdayToggleButton"
	    		android:layout_width="1dp"
	    		android:layout_height="wrap_content"
	    		android:layout_weight="1"
	    		android:textOn="Th"
	    		android:textOff="Th"
	    		android:textSize="24sp"
	    		android:padding="5dp"
	    		android:layout_margin="2dp"/>

	    	<ToggleButton
	    		android:id="@+id/fridayToggleButton"
	    		android:layout_width="1dp"
	    		android:layout_height="wrap_content"
	    		android:layout_weight="1"
	    		android:textOn="F"
	    		android:textOff="F"
	    		android:textSize="24sp"
	    		android:padding="5dp"
	    		android:layout_margin="2dp"/>
    		
	     </LinearLayout>

	    <LinearLayout
			android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal"
    		android:padding="0dp"
    		android:layout_margin="0dp">

	    	<ToggleButton
	    		android:id="@+id/saturdayToggleButton"
	    		android:layout_width="1dp"
	    		android:layout_height="wrap_content"
	    		android:layout_weight="1"
	    		android:textOn="Sa"
	    		android:textOff="Sa"
	    		android:textSize="24sp"
	    		android:padding="5dp"
	    		android:layout_margin="2dp"/>

	    	<ToggleButton
	    		android:id="@+id/sundayToggleButton"
	    		android:layout_width="1dp"
	    		android:layout_height="wrap_content"
	    		android:layout_weight="1"
	    		android:textOn="Su"
	    		android:textOff="Su"
	    		android:textSize="24sp"
	    		android:padding="5dp"
	    		android:layout_margin="2dp"/>
    	
    		
	     </LinearLayout>
    
</LinearLayout>
