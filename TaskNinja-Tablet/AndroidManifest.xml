<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="android.taskninja"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="11" />

    <application 
    	android:icon="@drawable/icon" 
    	android:label="@string/app_name" 
    	android:name="android.taskninja.core.app.App">
    	
        <activity 
        	android:name=".tablet.HomeActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.Wallpaper">
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
        </activity> 
        
         <activity 
        	android:name="android.taskninja.tablet.settings.SettingsActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.Wallpaper">           
        </activity>

    </application>
</manifest>